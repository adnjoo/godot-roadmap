{
  "sections": [
    {
      "id": "foundations",
      "title": "Foundations",
      "description": "Core concepts: nodes, scenes, input handling, signals, and resources. Master the fundamentals before building games."
    },
    {
      "id": "2d-essentials",
      "title": "2D Essentials",
      "description": "2D game development: sprites, tilemaps, collisions, physics, and animation systems."
    },
    {
      "id": "ui-systems",
      "title": "UI Systems",
      "description": "User interface design: Control nodes, themes, layout containers, and responsive UI patterns."
    },
    {
      "id": "game-systems",
      "title": "Game Systems",
      "description": "Advanced game architecture: state machines, save/load systems, event-driven design, and data management."
    },
    {
      "id": "content-pipeline",
      "title": "Content Pipeline",
      "description": "Asset management: importing resources, configuring import settings, and organizing project structure."
    },
    {
      "id": "tools-automation",
      "title": "Tools & Automation",
      "description": "Editor scripts, plugins, custom tools, and workflow automation to speed up development."
    },
    {
      "id": "performance",
      "title": "Performance & Optimization",
      "description": "Profiling, optimization techniques, draw call reduction, and physics performance tuning."
    },
    {
      "id": "shipping",
      "title": "Shipping & Distribution",
      "description": "Export settings, platform-specific builds, itch.io and Steam publishing, and release checklists."
    },
    {
      "id": "advanced",
      "title": "Advanced Topics",
      "description": "Optional advanced topics: multiplayer networking, shaders, 3D basics, and custom rendering."
    }
  ],
